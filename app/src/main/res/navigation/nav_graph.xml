<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.idputuwiprah.outlay.ui.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/incomeFragment"
        android:name="com.idputuwiprah.outlay.ui.fragments.income.IncomeFragment"
        android:label="IncomeFragment" />

    <fragment
        android:id="@+id/expenseFragment"
        android:name="com.idputuwiprah.outlay.ui.fragments.ExpenseFragment"
        android:label="ExpenseFragment" />

    <fragment
        android:id="@+id/debtFragment"
        android:name="com.idputuwiprah.outlay.ui.fragments.DebtFragment"
        android:label="DebtFragment" />

    <fragment
        android:id="@+id/addIncomeFragment"
        android:name="com.idputuwiprah.outlay.ui.fragments.income.AddIncomeFragment"
        android:label="AddIncomeFragment" />

    <action android:id="@+id/toIncomeFragment"
        app:destination="@id/incomeFragment" />

    <action android:id="@+id/toExpenseFragment"
        app:destination="@id/expenseFragment" />

    <action android:id="@+id/toDebtFragment"
        app:destination="@+id/debtFragment" />

    <action android:id="@+id/toAddIncomeFragment"
        app:destination="@id/addIncomeFragment" />
</navigation>